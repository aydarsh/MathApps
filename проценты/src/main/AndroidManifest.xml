<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.percentage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".percent2decimal"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".decimal2percent"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".fraction2percent"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".percentofnumber"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".numberfrompercent"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".percentincrease"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".percentdecrease"
            android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>